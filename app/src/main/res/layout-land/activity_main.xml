<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        class="com.example.finalproject.Frag"
        android:layout_width="0dp"
        android:layout_height="403dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="70dp"
        android:animateLayoutChanges="false"
        android:foregroundGravity="center_vertical|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragmentDetailContainerView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/products_frag" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetailContainerView2"
        class="com.example.finalproject.DetailsFragment"
        android:layout_width="358dp"
        android:layout_height="405dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:tag="FRAGB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragmentContainerView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/details_fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>